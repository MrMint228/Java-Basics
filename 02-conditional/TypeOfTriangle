
import java.util.Scanner;
/**
 * Программа для определения типа треугольника по длинам его сторон

 */
public class TypeOfTriangle {
    public static void main(String[] args)
    {
        Scanner scan = new Scanner(System.in);
        System.out.println("Давайте определим какой у вас треугольник \n Введите длину первой стороны: ");

        if (scan.hasNextInt()){
            int a = scan.nextInt();
            System.out.println("Введите длину второй стороны: ");
            int b  = scan.nextInt();
            System.out.println("Введите длину третей стороны: ");
            int c  = scan.nextInt();

            if (a + b > c && a + c > b && b + c > a ) {
                if  (a == b  && b == c ) {
                    System.out.println("Ваш треугольник равносторонний, длина его стороны равна: " + a);
                }
                else if (a == b || b == c || c == a)
                {
                    if ( a == b )
                        System.out.println("Ваш треугольник равнобедренный равны стороны a и b, их длинна: " + a);
                    else if (b == c )
                        System.out.println("Ваш треугольник равнобедренный равны стороны b и c, их длинна: " + b);
                    else
                        System.out.println("Ваш треугольник равнобедренный равны стороны b и c, их длинна: " + c);
                }
                else {
                    System.out.println("Ваш треугольник разносторонний, его стороны равны: a = " + a + " b = " + b + " с = " + c);

                }
            }
                else
            {
                    System.out.println("Согласно свойствам треугольников, такого треугольника не существует");
            }
                scan.close();
        }



    }


}
