import java.util.Scanner;

public class corectmesenge {
    public static void main(String[] args){
        String corect = "labobo";
        boolean run = true;
        Scanner scan = new Scanner(System.in);
        System.out.println("╔══════════════════════════╗");
        System.out.println("║     СИСТЕМА ВХОДА        ║");
        System.out.println("╚══════════════════════════╝");
        System.out.println("Введите labobo или goida или svoboda, если сдались напишите exit");
        if (scan.hasNextLine()){
            while (run) {
                String userdata = scan.nextLine();
                switch (userdata) {
                    case ("labobo") :
                    case ("goida") :
                    case ("svoboda") :
                        System.out.println("Пароль корректный✅");
                        System.out.println("Добро пожаловать!");
                        run =false;
                        break;
                    case ("exit"):
                        System.out.println("Так скоро? Ну тогда пока");
                        run = false;
                        break;
                    case ("secret"):
                        System.out.println("\uD83E\uDD5A");
                        run =false;
                        break;
                    default:
                        System.out.println("Пароль неверный! Введите правильный из списка паролей!");
                        break;
                }
            }
        } else System.out.println("Ошибка некорректный ввод");
        scan.close();
    }
}
